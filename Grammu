-- COCO HUB FOR DELTA EXECUTOR - NO LOADSTRING VERSION

local Plr = game:GetService("Players").LocalPlayer
local UIS = game:GetService("UserInputService")
local Camera = workspace.CurrentCamera
local RunService = game:GetService("RunService")

-- UI
local ScreenGui = Instance.new("ScreenGui", Plr:WaitForChild("PlayerGui"))
ScreenGui.Name = "COCO_HUB_GUI"

local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.new(0, 250, 0, 320)
Main.Position = UDim2.new(0.02, 0, 0.3, 0)
Main.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Main.BorderSizePixel = 0
Main.Active = true
Main.Draggable = true

local Title = Instance.new("TextLabel", Main)
Title.Text = "COCO HUB - DELTA EDITION"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 18

-- Feature Buttons
local function createButton(name, y, callback)
	local Btn = Instance.new("TextButton", Main)
	Btn.Size = UDim2.new(1, -20, 0, 30)
	Btn.Position = UDim2.new(0, 10, 0, y)
	Btn.Text = name
	Btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	Btn.Font = Enum.Font.SourceSans
	Btn.TextSize = 16
	Btn.MouseButton1Click:Connect(callback)
end

-- WalkSpeed
createButton("WalkSpeed x2", 40, function()
	Plr.Character.Humanoid.WalkSpeed = math.clamp(Plr.Character.Humanoid.WalkSpeed * 2, 16, 200)
end)

-- High Jump
createButton("High Jump", 80, function()
	Plr.Character.Humanoid.JumpPower = 150
end)

-- Silent Aimbot (Basic Raycast Lock)
local LockPart = "Head"
local SilentAimEnabled = false

createButton("Silent Aimbot (Toggle)", 120, function()
	SilentAimEnabled = not SilentAimEnabled
end)

-- ESP
local ESPEnabled = false

createButton("ESP (Toggle)", 160, function()
	ESPEnabled = not ESPEnabled
	for _, v in pairs(workspace:GetChildren()) do
		if v:IsA("Model") and v:FindFirstChild("HumanoidRootPart") and v ~= Plr.Character then
			if not v:FindFirstChild("ESP") and ESPEnabled then
				local box = Instance.new("BoxHandleAdornment", v)
				box.Name = "ESP"
				box.Adornee = v
				box.Size = Vector3.new(3, 5, 2)
				box.AlwaysOnTop = true
				box.ZIndex = 10
				box.Color3 = Color3.new(1, 0, 0)
				box.Transparency = 0.6
			elseif v:FindFirstChild("ESP") and not ESPEnabled then
				v.ESP:Destroy()
			end
		end
	end
end)

-- Lock Head/Body
createButton("Toggle LockPart (Head/Body)", 200, function()
	LockPart = (LockPart == "Head" and "HumanoidRootPart") or "Head"
end)

-- Team Tags MM2
createButton("Team Tags (MM2)", 240, function()
	for _, p in pairs(game.Players:GetPlayers()) do
		if p:FindFirstChild("leaderstats") and p.leaderstats:FindFirstChild("Team") then
			local tag = Instance.new("BillboardGui", p.Character:FindFirstChild("Head") or p.Character:FindFirstChild("HumanoidRootPart"))
			tag.Size = UDim2.new(0, 100, 0, 40)
			tag.Adornee = tag.Parent
			tag.AlwaysOnTop = true
			local text = Instance.new("TextLabel", tag)
			text.Size = UDim2.new(1, 0, 1, 0)
			text.Text = p.leaderstats.Team.Value
			text.BackgroundTransparency = 1
			text.TextColor3 = (text.Text == "Murderer" and Color3.new(1, 0, 0)) or (text.Text == "Sheriff" and Color3.new(0, 0, 1)) or Color3.new(0, 1, 0)
			text.TextScaled = true
		end
	end
end)

-- Silent Aimbot Logic
RunService.RenderStepped:Connect(function()
	if SilentAimEnabled and Plr.Character and Plr.Character:FindFirstChild("HumanoidRootPart") then
		local Closest, Dist = nil, math.huge
		for _, v in pairs(game.Players:GetPlayers()) do
			if v ~= Plr and v.Character and v.Character:FindFirstChild(LockPart) then
				local ScreenPos, OnScreen = Camera:WorldToViewportPoint(v.Character[LockPart].Position)
				local Mag = (Vector2.new(ScreenPos.X, ScreenPos.Y) - UIS:GetMouseLocation()).Magnitude
				if OnScreen and Mag < Dist then
					Dist = Mag
					Closest = v.Character[LockPart]
				end
			end
		end
		if Closest then
			Camera.CFrame = CFrame.new(Camera.CFrame.Position, Closest.Position)
		end
	end
end)
